copy() {cp -vr "$1" "$(cat ~/.config/bspwm/bmdirs | fzf | sed "s|~|$HOME|")";}
alias cc=copy
lfcd () {
    tmp="$(mktemp)"
    lf -last-dir-path="$tmp" "$@"
    if [ -f "$tmp" ]; then
        dir="$(cat "$tmp")"
        rm -f "$tmp"
        [ -d "$dir" ] && [ "$dir" != "$(pwd)" ] && cd "$dir"
    fi
}
bindkey -s '^o' 'lfcd\n'
bindkey -s '^e' 'lf\n'
alias cpu="ps axch -o cmd:15,%cpu --sort=-%cpu | head"
alias mem="ps axch -o cmd:15,%mem --sort=-%mem | head"
