[global]
    font = JetBrainsMono Nerd Font 9
	class = Dunst
	corner_radius=9
	mouse_left_click = close_all
	max_icon_size = 50
	mouse_middle_click = do_action
	title = Dunst
    allow_markup = yes
    format = "<b>%a:</b> %s\n%b"
    sort = yes
    indicate_hidden = yes
    alignment = left
    bounce_freq = 0
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no
	geometry = "300x5-30+20"
    transparency = 0
    idle_threshold = 120
    monitor = 0
    follow = keyboard
    sticky_history = yes
    line_height = 0
    separator_height = 2
    padding = 8
    horizontal_padding = 8
    separator_color = auto
    startup_notification = false
    dmenu = /usr/bin/dmenu -p dunst:
    browser = /usr/bin/brave -new-tab

[frame]
    width = 1
    color = "#000000"

[shortcuts]
    close = mod4+shift+n
    close_all = mod4+shift+q
    history = mod4+n
	context = ctrl+shift+period

[urgency_low]
    background = "#1f2320"
    foreground = "#ffffff"
    timeout = 10

[urgency_normal]
    background = "#1f2320"
    foreground = "#ffffff"
    timeout = 10

[urgency_critical]
    background = "#EBCB8B"
    foreground = "#000000"
    timeout = 20

[signed_on]
    appname = Pidgin
    summary = "*signed on*"
    urgency = low

[signed_off]
    appname = Pidgin
    summary = *signed off*
    urgency = low

[says]
    appname = Pidgin
    summary = *says*
    urgency = critical
    format  = "%s "%b""
