
#################################################################
# KEYBOARD BINDINGS FOR ANY TWM
#################################################################

#################################################################
# SUPER + ... KEYS
#################################################################

#Neovim
super + e
    alacritty -e nvim

#dmenu
super +  d
	dmenu_run -h 30 -i

#Firefox
super + w
    brave

#clear my clipboard
super + BackSpace
	printf '' | xclip -selection clipboard

# MOCP
super + m
	alacritty -e mocp

#gotop
super + g
	alacritty -e gotop

#bashtop
super + b
	alacritty -e bashtop 

#arcolinux-logout
super + x
    arcolinux-logout

#recording my screen (No audio)
super + r
	$HOME/.config/bspwm/scripts/record-screen.sh
# to record from the webcam set your input file to /dev/video<filenumber>

#Pavucontrol
#super + v
    #pavucontrol
super + v
    alacritty -e pulsemixer

#alacritty
super + Return
    alacritty

#################################################################
# SUPER + SHIFT KEYS
#################################################################

#Winmask
super + shift + i
	/home/$USER/.config/bspwm/scripts/winmask

#Xkill
super + shift + Escape
    xkill

#File-Manager
super + shift + f
	freetube

#discord
super + shift + d
	discord-canary
	
#reload sxhkd:
super + shift + s
	pkill -USR1 -x sxhkd

#config selector
super + shift + c
	/home/$USER/.config/bspwm/scripts/configselector

#manual execution
super + shift + m
	bash /home/$USER/.config/bspwm/scripts/mansplain

